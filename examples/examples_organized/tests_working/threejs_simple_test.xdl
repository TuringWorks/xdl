; ================================================================
; VIZ3D Three.js Simple Test
; ================================================================
; Test Three.js volume rendering with minimal dataset
; ================================================================

PRINT, 'ðŸš€ VIZ3D Three.js Simple Test'
PRINT, ''

; Create a simple 10x10x10 volume with gradient
grid = 10
total = grid * grid * grid
volume = FINDGEN(total) / total  ; Values from 0 to 1

PRINT, 'Created volume: ', grid, 'x', grid, 'x', grid
PRINT, 'Total voxels: ', total
PRINT, ''

; Initialize and render
VIZ3D_INIT, WINDOW_SIZE=[1280, 720], TITLE='Three.js Test'
VIZ3D_COLORMAP, 'VIRIDIS'
VIZ3D_CAMERA, POSITION=[0.0, 0.0, 3.0]
VIZ3D_VOLUME, volume, DIMENSIONS=[grid, grid, grid]

PRINT, 'ðŸŽ¨ Launching Three.js visualization...'
VIZ3D_RENDER, INTERACTIVE=1

PRINT, ''
PRINT, 'âœ“ Test complete!'
PRINT, '  Three.js volume rendering launched in Tauri window'
PRINT, ''
